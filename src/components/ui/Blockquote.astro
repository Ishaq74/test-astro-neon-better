---
interface Props {
  cite?: string;
  class?: string;
}
const { cite, class: className } = Astro.props;
---
<blockquote class:list={["blockquote-base", className]} cite={cite}>
  <slot />
  {cite && (
    <footer>â€” <cite><a href={cite} target="_blank" rel="noopener noreferrer">{cite}</a></cite></footer>
  )}
</blockquote>

<style>
  .blockquote-base {
    border-left: 4px solid var(--brand-primary);
    padding-left: var(--space-6);
    margin: var(--space-6) 0;
    font-style: italic;
    color: var(--theme-text-secondary);
  }
  .blockquote-base footer {
    margin-top: var(--space-4);
    font-style: normal;
    font-size: var(--font-size-sm);
    color: var(--theme-text);
  }
  .blockquote-base footer a {
    color: inherit;
    text-decoration: none;
  }
  .blockquote-base footer a:hover {
    text-decoration: underline;
  }
</style>
