---
interface Props {
  open?: boolean;
  label?: string;
  class?: string;
}
const { open = false, label = '', class: className = '' } = Astro.props;
---
<div class:list={["dropdown", className]}>
  <button class="dropdown-trigger" aria-haspopup="true" aria-expanded={open}>{label}<slot name="trigger" /></button>
  {open && (
    <div class="dropdown-content">
      <slot />
    </div>
  )}
</div>

<style>
.dropdown {
  position: relative;
  display: inline-block;
}
.dropdown-trigger {
  background: var(--theme-surface);
  color: var(--theme-text);
  border: none;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-lg);
  cursor: pointer;
  font-weight: 500;
}
.dropdown-content {
  position: absolute;
  top: 100%;
  right: 0;
  min-width: 180px;
  background: var(--theme-surface);
  border: 1px solid var(--theme-border);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  z-index: 100;
  margin-top: 0.5rem;
  padding: 0.5rem 0;
}
</style>
